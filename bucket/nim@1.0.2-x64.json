        "bin\\nim.exe",
        "bin\\nimble.exe",
        "bin\\nimgrab.exe",
        "bin\\nimgrep.exe",
        "bin\\nimsuggest.exe",
        "bin\\vccexe.exe"
    ],
    "checkver": {
        "url": "https://nim-lang.org/install_windows.html",
        "re": "nim-([\\d.]+)_x64"
